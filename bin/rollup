#!/usr/bin/env node

var rollup = require('rollup'),
    resolve = require('rollup-plugin-node-resolve'),
    commonjs = require('rollup-plugin-commonjs'),
    output = 'vega-webgl-renderer.js';

var modules = [
  'd3-color',
  'vega-scenegraph'
];

var module_globals = {
  'd3-color': 'd3',
  'vega-scenegraph': 'vega'
};

rollup.rollup({
  entry: 'index.js',
  external: modules,
  plugins: [
    resolve(),
    commonjs()
  ]
}).then(function(bundle) {
  return bundle.write({
    format: 'umd',
    moduleName: 'vega',
    globals: module_globals,
    dest: 'build/' + output
  });
}).then(function() {
  console.warn('â†³ build/' + output);
}).catch(abort);

function abort(error) {
  console.error(error.stack);
}
